{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"jsx": "preserve",
		"declaration": false,
		"declarationMap": false,
		"baseUrl": ".",
		"paths": {
			"@app/*": ["app/*"],
			"@/components/*": ["components/*"],
			"@/hooks/*": ["hooks/*"],
			"@/lib/*": ["lib/*"],
			"@/utils/*": ["utils/*"],
			"@public/*": ["public/*"],
			"@/contexts/*": ["contexts/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
